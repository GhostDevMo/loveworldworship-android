<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:background="@drawable/rounded_dialog"
	android:layout_height="match_parent">
	<androidx.core.widget.NestedScrollView
		android:id="@+id/nested_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:scrollbars="none"
		android:scrollingCache="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<LinearLayout
			android:id="@+id/lyt_form"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="0dp">
			<!--Head Page -->
			<LinearLayout 
				android:id="@+id/mainLayout" 
				android:layout_width="match_parent"
				android:layout_height="20dp"		
				android:layout_gravity="center"
				android:gravity="center" > 
				<View
					android:layout_width="80dp"
					android:layout_height="4dp" 
					android:layout_gravity="center"
					android:gravity="center"
					android:background="?attr/colorDivider" />
			</LinearLayout>  
			<include
				android:layout_width="match_parent"
				android:layout_height="90dp"
				layout="@layout/Style_RowSongsLiteView"/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_margin="10dp"
				android:background="?attr/colorDivider" />

			<LinearLayout
				android:id="@+id/PlayNextLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="4dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_next_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_PlayNext"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/PlayingQueueLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="4dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_playing_queue_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_AddPlayingQueue"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/EditSongLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="4dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_edit_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_EditSong"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/AddPlaylistLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="6dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_add_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_Add_To_Playlist"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/GoToArtistLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="6dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_profile_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_GoToArtist"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/DetailsLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="4dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_details_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_Details"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/RePostLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="4dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_repost_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_RePost"
					android:textSize="16dp"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/DeleteLayout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				android:background="?attr/selectableItemBackground"
				android:paddingStart="10dp"
				android:paddingEnd="10dp">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="4dp"
					android:tint="?attr/colorSecondaryExtra"
					android:src="@drawable/icon_delete_vector"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical" />
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:layout_marginStart="5dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="@string/Lbl_Delete"
					android:textSize="16dp"/>
			</LinearLayout>
			<View 
				android:layout_height="?android:attr/actionBarSize"
				android:layout_width="match_parent" />
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</LinearLayout> 